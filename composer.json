{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "barryvdh/laravel-dompdf": "^3.1",
        "laravel/framework": "^12.0",
        "laravel/octane": "^2.12",
        "laravel/tinker": "^2.10.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "docker compose -f docker-compose.dev.yaml up -d --remove-orphans"
        ],
        "dev:localdb": [
            "docker compose -f docker-compose.dev.yaml -f docker-compose.localdb.yaml up -d --remove-orphans"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "lint": [
            "vendor/bin/pint --repair"
        ],
        "db:setup": [
            "docker compose exec app php artisan migrate:fresh --seed"
        ],
        "optimize": [
            "docker compose exec app php artisan optimize"
        ],
        "optimize:clear": [
            "docker compose exec app php artisan optimize:clear"
        ],
        "up": [
            "docker compose up -d --remove-orphans"
        ],
        "up:localdb": [
            "docker compose -f docker-compose.yaml -f docker-compose.localdb.yaml up -d --remove-orphans"
        ],
        "rebuild": [
            "docker compose -f docker-compose.yaml build"
        ],
        "rebuild:dev": [
            "docker compose -f docker-compose.dev.yaml build"
        ],
        "down": [
            "docker compose -f docker-compose.dev.yaml -f docker-compose.localdb.yaml down"
        ],
        "schedule:clear": [
            "docker compose exec app php artisan schedule:clear --all"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
